
<div id = "page_wrapper">
<h1>New Post</h1>

<%= form_for :post do |f| %>  
<%if @post.errors.any?%>
<div id="errors">
	<h2><%=pluralize(@post.errors.count,"error")%> prevented creating post:</h2>
	<ul>
		<%@post.errors.full_messages.each do |msg|%>
		<li>
			<%=msg%>
		</li>
		<%end%>
	</ul>
	</div>
	<%end%>

<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  
  <p><%= f.label :url %>
    <%= f.file_field :url %></p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
