
<div id = "page_wrapper">
<h1>Edit Post</h1>
<%= form_for :post, url: 'edit' do |f| %>  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder => @post.title%>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :placeholder => @post.text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
