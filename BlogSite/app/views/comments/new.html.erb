<div id = "page_wrapper">
<h1>New Comment</h1>

<%= form_for :comment do |f| %>  
<%if @comment.errors.any?%>
<div id="errors">
	<h2><%=pluralize(@comment.errors.count,"error")%> prevented creating comment:</h2>
	<ul>
		<%@comment.errors.full_messages.each do |msg|%>
		<li>
			<%=msg%>
		</li>
		<%end%>
	</ul>
	</div>
	<%end%>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
