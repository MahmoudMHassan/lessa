<div id="page_wrapper">
  

<h3>Latest Posts: </h3>
  <% @posts.first(3).each do |post| %>
  <div class="post_wrapper">
  
    <tr>
      <td><h2 class="title">
<%= link_to post.title, "posts/#{post.id}" %>
</h2></td>
      <div style="text-align: right">
      -<%=Member.find(post.aid).signature%> <br>
      </div>
     
      <p class="date"><%= post.created_at.strftime("%B,%d,%Y")%> </p>
  	   
      
    </tr>
    </div>
  <% end %>
</div>