<div id = "page_wrapper">
<h1>Our Blog</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      
      <td><%= article.text %></td>
     <%if @current_user!=nil && @current_user['id'] == article.aid%> 
      <td><%= button_to "delete", {:controller => :posts,
      						   :action => 'remove',
      						   :id => article.id },
      						   :method => :delete %>
      						   </td>
      <% end %>
      						    
      				<%= flash[:notice] if flash[:notice] %>		   
      <td><%= article.id %></td>
    </tr>
  <% end %>
</div>
