<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <%= button_to "delete", {:controller => :posts,
      						   :action => 'destroy',
      						   :id => article.id },
      						   :method => :delete %>
      <td><%= article.text %></td>
    </tr>
  <% end %>
